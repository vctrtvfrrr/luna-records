[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2

[**.*sh]
indent_size = tab
shell_variant = bash
binary_next_line = true   # like -bn
switch_case_indent = true # like -ci
space_redirects = true    # like -sr
keep_padding = false      # like -kp
